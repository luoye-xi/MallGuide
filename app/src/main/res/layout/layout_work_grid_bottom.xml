<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp"
        >

        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_customer_orders"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顾客订单"
                android:gravity="center"
                style="@style/TextColor666_12sp"
                android:layout_marginTop="9dp"
                />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bank_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_bank_card"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的银行卡"
                android:gravity="center"
                style="@style/TextColor666_12sp"
                android:layout_marginTop="9dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_common_problems"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:gravity="center"
                style="@style/TextColor666_12sp"
                android:layout_marginTop="9dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_opinion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_feedback"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:gravity="center"
                style="@style/TextColor666_12sp"
                android:layout_marginTop="9dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:paddingBottom="18dp"
        >

        <LinearLayout
            android:id="@+id/ll_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_system_settings"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统设置"
                android:gravity="center"
                style="@style/TextColor666_12sp"
                android:layout_marginTop="9dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="invisible"
            />

    </LinearLayout>

</LinearLayout>