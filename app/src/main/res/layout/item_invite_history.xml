<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_14dp"
        android:paddingEnd="@dimen/space_14dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_head"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/personal_img"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/iv_head"
            android:layout_marginStart="15dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="流年"
                style="@style/TextBlack14sp"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请时间：2018-12-12  12:00"
                style="@style/TextColor999_12sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/shadow_gray"/>

</LinearLayout>