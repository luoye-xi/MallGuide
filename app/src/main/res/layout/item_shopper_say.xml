<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_14dp"
        android:paddingStart="@dimen/space_14dp"
        android:paddingEnd="@dimen/space_14dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_head"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/personal_img"
                android:layout_centerVertical="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/iv_head"
                android:layout_marginStart="13dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/rating_bar"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="荼蘼之恋伤"
                    style="@style/TextBlack14sp"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8小时前发布"
                    android:textSize="11sp"
                    android:textColor="@color/color_text_99"
                    android:layout_marginTop="2dp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="宝贝很棒，正品保证，苏宁快递真快，隔天就到了，买的金色的，很大气上档次，手机比实体店便宜好几百"
            style="@style/TextColor666_14sp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <com.linkstar.app.guide.widget.MessagePicturesLayout
            android:id="@+id/pic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_bg_gray"
        android:layout_marginTop="10dp"
        />

</LinearLayout>