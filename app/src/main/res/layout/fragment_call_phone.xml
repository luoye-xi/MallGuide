<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.CallPhoneFragment"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_5dp"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拨打小七顾问电话"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_mine_text_sp"
            android:layout_marginTop="29dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_or_padding_start"
            android:layout_marginEnd="@dimen/margin_or_padding_start"
            android:text="400-2123-1123"
            android:textColor="@color/title_color"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1dp"
            android:background="@color/color_bg_gray"
            android:layout_marginTop="22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_mine_height_dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_mine_text_sp"
                android:gravity="center"
                android:textColor="@color/color_text_gray"
                android:text="取消"
                />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_bg_gray"
                />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/title_mine_text_sp"
                android:gravity="center"
                android:textColor="@color/main_red"
                android:text="确认"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>